{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "camelcase": "off",
    "linebreak-style": "off",
    "require-jsdoc": "off",
    "max-len": "warn",
    "no-param-reassign": "off",
    "one-var": "off",
    "no-unused-vars": "off",
    "class-methods-use-this": "off",
    "import/named": "warn"
  }
}
